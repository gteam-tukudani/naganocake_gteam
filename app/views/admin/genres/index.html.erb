<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col">
      <h1>ジャンル一覧・追加</h1><br>
    </div>
  </div>

  <div class="row">
    <div class="col-6">
      <%= form_with model: Genre.new, url: admin_genres_path do |f| %>
        <div class="d-flex align-items-center mb-3">
          <h4 class="mr-2">ジャンル名</h4> 
          <%= f.text_field :name, class: "mr-2" %> 
          <%= f.submit '新規登録', class: "btn btn-success ml-4 py-1" %>
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-lg-5 mt-3">
      <table class="table">
        <thead>
          <tr class="table-secondary">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success py-0" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
