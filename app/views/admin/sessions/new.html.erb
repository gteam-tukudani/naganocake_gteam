<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>
<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h2 class="mt-5">管理者ログイン</h2>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'needs-validation', novalidate: '' }) do |f| %>

        <table class="table table-borderless mt-5">
          <tbody>
            <tr>
              <td class="text-end"><%= f.label :email, 'メールアドレス', class: 'form-label' %></td>
              <td class="text-center">
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
              </td>
            </tr>
            <tr>
              <td class="text-end"><%= f.label :password, 'パスワード', class: 'form-label' %></td>
              <td class="text-center">
                <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="actions text-center mt-4">
          <%= f.submit "ログイン", class: 'btn btn-primary' %>
        </div>
      <% end %>
      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>