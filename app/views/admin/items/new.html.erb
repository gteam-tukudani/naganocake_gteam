<div class="container">
  <div class="row">
    <div class="col-sm-8 px-sm-0 offset-sm-1">
      <h2 class="mt-5">商品新規登録</h2><br>
      <div class="row">
        <div class="col-sm-10 px-sm-0 mx-auto mb-5">
          <%= form_with model: @item, url: admin_items_path, local: true do |f| %>
          <table class="table table-borderless">
            <tr>
              <div class="form-group">
                <th><%= f.label :商品画像 %></th>
                <th><%= f.file_field :image, accept: "image/*" %><th>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :商品名 %></th>
                <td><%= f.text_field :name, size: "37×1", placeholder:"商品名" %></td>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :商品説明 %></th>
                <td><%= f.text_area :introduction, size: "40x10", placeholder:"ここに説明文を記述します" %></td>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :ジャンル %></th>
                <td><%= f.collection_select :genre_id, Genre.all, :id, :name, :prompt => "--選択してください--" %></td>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :税抜価格 %></th>
                <td><%= f.text_field :price, placeholder:"1000" %>円</td>
              </div>
            </tr>
            <tr>
              <div class="form-group">
                <th><%= f.label :販売ステータス %></th>
                <td>
                  <%= f.radio_button :is_active, true, checked: true %>
                  <%= f.label :is_active, "販売中" %>
                  <%= f.radio_button :is_active, false %>
                  <%= f.label :is_active, "販売停止中" %>
                </td>
              </div>
            </tr>
            <tr>
               <td colspan="2" class="text-center">
                 <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
               </td>
            </tr>
          <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
