<div class="container mt-5 mb-5">
  <div class="row justify-content-center">
    <div class="col-12">
      <h2>商品詳細</h2><br>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 col-sm-6 col-md-6 text-right">
      <% if @item.image.attached? %>
        <%= image_tag @item.image.variant(resize_to_limit: [500, 500]), class: "item-image img-fluid" %>
      <% else %>
        <%= image_tag "no_image.jpg", class: "default-image img-fluid", style: "max-width: 100%; height: auto;" %>
      <% end %>
    </div>
    <div class="col-12 col-sm-6 col-md-6 item-details">
      <table class="table table-borderless large-text-table">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= simple_format(@item.introduction) %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格(税抜価格)</th>
          <td><%= (@item.price * 1.1).floor.to_s(:delimited) %>円 (<%= @item.price.floor.to_s(:delimited) %>円)</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-danger">販売停止中です</p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>