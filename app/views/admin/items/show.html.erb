<div class="container takasa">
  <h2>商品詳細</h2><br>
  <div class="row">
    <div class="col-xs-4">
      <% if @item.image.attached? %>
        <%= image_tag @item.image, class: "item-image" %>
      <% else %>
        <%= image_tag "no_image.jpg", class: "default-image" %>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6 col-md-6 item-details mx-auto">
      <table class="table  table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= simple_format(@item.introduction) %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格(税抜価格)</th>
          <td><%= (@item.price*1.1).floor.to_s(:delimited) %>円 (<%= @item.price.floor.to_s(:delimited) %>円)</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <td>
            <% if @item.is_active == true %>
              <p class="text-success">販売中</p>
            <% else %>
              <p class="text-danger">販売停止中です</p>
            <% end %>
          </td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path, class: "btn btn-success" %>
    </div>
  </div>
</div>