<div class="container">
  <div class="row justify-content-center">
    <div class="col-lg-9">

      <h2>新規会員登録</h2>
        <%= render "public/shared/error_messages", resource: resource %>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <table class="table table-borderless">
          <tr>
            <td class="field">氏名</td>
          　<td>
          　  <%= f.label :（姓） %><%= f.text_field :last_name, autofocus: true, autocomplete: "first_name" %> <%= f.label :（名） %><%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
          　</td>
　        </tr>

          <tr>
            <td class="field">フリガナ</td>
          　<td>
          　  <%= f.label :（セイ） %><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %> <%= f.label :（メイ） %><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
　          </td>
　        </tr>

          <tr>
            <td class="field">メールアドレス</td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr>
            <td class="field">郵便番号（ハイフンなし）</td>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code"%></td>
          </tr>

          <tr>
            <td class="field">住所</td>
            <td class="flex-grow-1"><%= f.text_field :address, autofocus: true, autocomplete: "address", class: "form-control" %></td>
          </tr>

          <tr>
            <td class="field">電話番号（ハイフンなし）</td>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
          </tr>

          <tr>
              <% if @minimum_password_length %>
            <td class="field">パスワード<em>(<%= @minimum_password_length %>文字以上)</em></td>
              <% end %><br />
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr>
            <td class="field">確認用パスワード</td>
            <td> <%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>
        </table>

        <table class="table table-borderless text-center">
          <tr>
            <td><p>   </p></td>
            <td><%= f.submit "新規登録", class:"btn btn-primary" %></td>
          </tr>
          <tr>
            <td></td>
            <td>
              <h4>既に登録済みの方</h4>
              <%= render "public/shared/links" %>
            </td>
          </tr>
        </table>
        <% end %>
    </div>
  </div>
</div>