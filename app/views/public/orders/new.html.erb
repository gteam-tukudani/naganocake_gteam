<%= flash[:notice] %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card">
        <div class="card-body">
          <%= form_with model: @order, url: '/orders/confirm' do |f| %>
            <h2 class="text-center mb-4">注文情報入力</h2>
            <h4>支払い方法</h4>
            <div class="form-group">
              <%= f.radio_button :payment_method, Order.payment_methods.key(0), checked: true %>
              <%= f.label :payment_method_credit_card, Order.payment_methods_i18n[:credit_card], class: "ml-2" %>
            </div>
            <div class="form-group">
              <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
              <%= f.label :payment_method_transfer, Order.payment_methods_i18n[:transfer], class: "ml-2" %>
            </div>

            <h3>お届け先</h3>
            <div class="form-group">
              <%= f.radio_button :address_option, 0, checked: true %>
              <label class="ml-2">自身の住所</label>
            </div>
            <div class="form-group">
              〒 <%= current_customer.postal_code %> <%= current_customer.address %><br />
              <%= current_customer.last_name %><%= current_customer.first_name %>
            </div>
            <div class="form-group">
              <%= f.radio_button :address_option, 1 %>
              <label class="ml-2">登録済み住所から選択</label>
              <%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display), { prompt: "選択してください" }, class: "form-control mt-2" %>
            </div>

            <div class="form-group">
              <%= f.radio_button :address_option, 2 %>
              <label class="ml-2">新しいお届け先</label>
            </div>
            <div class="form-group">
              <label>郵便番号</label>
              <%= f.text_field :postal_code, class: "form-control" %>
            </div>
            <div class="form-group">
              <label>住所</label>
              <%= f.text_field :address, class: "form-control" %>
            </div>
            <div class="form-group">
              <label>宛名</label>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <%= f.submit "確認画面へ進む", class: "btn btn-primary btn-block" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>