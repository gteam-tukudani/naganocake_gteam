<h2>注文履歴詳細</h2>
<%= form_with model: @order, url: orders_path, method: :get, local: true do |f| %>
  <table>
    <tr>
      <td>注文日</td>
      <td><%= l @order.created_at, format: :month_day %></td>
    </tr>
    <tr>
      <td>配送先</td>
      <td>
        〒 <%= @order.postal_code %> <%= @order.address %><br />
        <%= @order.name %>
      </td>
    </tr>
    <tr>
      <td>支払い方法</td>
      <td><%= @order.payment_method_i18n%></td>
    </tr>
    <tr>
      <td>ステータス</td>
      <td>
        <td><%= @order.status_i18n %></td>
      </td>
    </tr>
  </table>
<% end %>


<table>
    <tr>
      <td>商品</td>
      <td>単価</td>
      <td>個数</td>
      <td>小計</td>
    </tr>

    <% @sum = 0 %>
    <% @order.order_details.each do |detail| %>
    <tr>
      <td><%= detail.item.name %></td>
      <td><%= detail.price %>円</td>
      <td><%= detail.amount %></td>
      <td><%= detail.price * detail.amount %>円</td>
    </tr>
    <% @sum += detail.price * detail.amount %>
  <% end %>
    </table>


  <table>
    <tr>
      <td>商品合計</td>
      <td><%= @sum * 1.1 %>円</td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= 800 %>円</td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total_payment %>円</td>
    </tr>
  </table>



