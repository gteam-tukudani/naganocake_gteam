<div class="container">
  <div class="card mt-5">
    <div class="card-body">
      <h1 class="card-title mb-4">配送先登録 / 一覧</h1>
      <%= form_with model: @address, url: address_path(@address), local: true do |f| %>
        <div class="form-group">
          <%= f.label :postal_code, "郵便番号(ハイフンなし)" %>
          <%= f.text_field :postal_code, class: "form-control", placeholder: "郵便番号を入力してください" %>
        </div>
        <div class="form-group">
          <%= f.label :address, "住所" %>
          <%= f.text_field :address, class: "form-control", placeholder: "住所を入力してください" %>
        </div>
        <div class="form-group">
          <%= f.label :name, "宛名" %>
          <%= f.text_field :name, class: "form-control", placeholder: "宛名を入力してください" %>
        </div>
        <div class="text-center mt-4">
          <%= f.submit "変更を保存する", class: "btn btn-lg btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
