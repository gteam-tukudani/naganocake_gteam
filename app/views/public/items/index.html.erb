<div class="container">
  <div class="row">

    <div class="col-sm-3 mt-5">
      <div class="sidebar d-flex flex-column align-items-center border p-2">
        <h5 class="border-bottom pb- w-100 text-center">ジャンル検索</h5>
        <div class="btn-group-vertical mt-3 w-100 ">
          <% @genres.each do |genre| %>
            <%= link_to genre.name, items_path(genre_id: genre.id), class: "mb-2 w-100", role: "button" %>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-sm-9">
      <div class="row">
        <div class="col-sm-12 px-sm-0 mt-5">
          <h2>商品一覧(全<%= @item.count %>件)</h2>
        </div>
      </div>     
      <div class="row mt-3 mb-3">
        <% @item.each do |item| %>
          <div class="col-12 col-sm-6 col-md-6 col-lg-3">
            <div class="card w-100 bg-transparent border-0">
              <%= link_to image_tag(url_for(item.image), alt: item.name, class: "card-img-top"), item_path(item) if item.image.attached? %>
              <div class="card-body">
                <p class="item-details item-name card-text"><%= item.name %></p>
                <% if item.is_active %>
                  <p class="item-details card-text"><%= item.price %>円(税込)</p>
                <% else %>
                  <p class="text-danger font-weight-bold card-text">販売停止中</p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>    
      <div class="d-flex justify-content-center">
        <%= paginate @item, class: "pagination justify-content-center" %>
      </div>
    </div>
  </div>
</div>