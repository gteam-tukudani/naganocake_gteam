<div class="conteiner">
  <h1>ショッピングカート</h1>
    <div class="row justify-content-center">
      <div class="col-10">
        <div class="text-right mt-10">
          <% if @cart_items.present? %>
            <%= link_to cart_items_destroy_all_path, method: :delete,  data: { confirm: "カートに追加した商品をすべて削除しますか？" } do %>
              <button class="btn btn-danger">カートを空にする</button>
            <% end %>
          <% else %>
            <p>カートに商品はありません</p>
          <% end %>
        </div>
        <table class="table table-bordered border-0">
          <thead>
            <tr>
              <th>商品名</th>
              <th>単価(税込)</th>
              <th>数量</th>
              <th>小計</th>
            </tr>
          </thead>
          <tbody>
            <% total_price = 0 %>
            <% @cart_items.each do |cart_item| %>
            <tr>
              <td>
                <% if cart_item.item.image.attached? %>
                  <%= image_tag cart_item.item.image, size: "50x50" %>
                <% else %>
                  <%= image_tag "no_image.jpg", size: "50x50" %>
                <% end %>
          　     <%= cart_item.item.name %>
              </td>
              <td>
                <%= cart_item.item.with_tax_price %>円
              </td>
              <td>
                <%= form_with model:cart_item, url:cart_item_path(cart_item.id), local:true do |f| %>
                <%= f.select :amount, *[1..10] %>
                <%= f.submit "変更" %>
                <% end %>
              </td>
              <td>
                <%= cart_item.subtotal %>円
              </td>
                <% total_price += cart_item.subtotal %>
              <td>
                <%= link_to cart_item_path(cart_item), method: :delete, data: { confirm: "商品を削除しますか？" } do %>
                  <button class="btn btn-danger">削除</button>
                <% end %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
        <div class="row justify-content-center">
          <div class="col-md-3">
            <table class="table table-bordered">
              <tr>
                <td>
                  <strong>合計金額（税込）:</strong>
                </td>
                <td class="text-right">
                  <strong><%= total_price %>円</strong>
                </td>
              </tr>
            </table>
          </div>
        </div>
          <div class="row justify-content-center">
            <div class="col-10">
              <%= link_to root_path do %>
                <button class="btn btn-primary ml-5 mt-4">買い物を続ける</button>
              <% end %>
                <div class="text-center">
                  <% if @cart_items.present? %>
                    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-success mb-5" %>
                  <% else %>
                    <p></p>
                  <% end %>
              　</div>
            </div>
          </div>
      </div>
    </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-danger">
    <%= flash[:notice] %>
  </div>
<% end %>